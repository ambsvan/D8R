<h1>Login Below.</h1>

<form action="/login" method="post">
    <div class="form">
      <div>
        <label>Username:</label>
        <input type="text" name="username" value="<%= params[:username] %>" required>
      </div>
      <div>
        <label>Password:</label>
        <input type="text" name="password" value="" required>
      </div>  
      <div>
      <input type="submit" value="Login">
      </div>
    </div>
  </div>
</form>
<div><% if @login_failed  %>Invalid login, please try again</div><%end%>

<a href="/">Reload Homepage</a>

  <% if @user && @user.errors.any? %>
  <div>
    <strong>There are some issues with your input, you'll have to fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |input| %>
        <li><%= input %></li>
      <% end %>
    </ul>
  </div>
<% end %>