<h1>SnapDate</h1>

<center><h2>Welcome to the App. Please Sign up below.</h2></center>

<div class="margin"></div>

<div class="form">
<form action="/" method="post">
    <div>
      <div>
        <label>Username:</label>
        <input type="text" name="username" value="<%= @user && @user.username %>">
      </div>
      <div>
        <label>Password:</label>
        <input type="text" name="password" value="<%= @user && @user.password %>">
      </div>
       <div>
        <label>Avatar URL:</label>
        <input type="text" name="img" value="<%= @user && @user.img %>">
      </div>
      <div>
        <label>Age:</label>
        <input type="text" name="age" value="<%= @user && @user.age %>">
      </div>
       <div>
       <label>Gender:</label> &nbsp;
          <input type="radio" name="gender" value="male">Male &nbsp;
          <input type="radio" name="gender" value="female">Female
      </div>
      <div>
        <label>Bio (140 chars max):</label>
        <input type="text" name="bio" value="<%= @user && @user.bio %>">
      </div>
      <div>
      <input type="submit" value="Submit">
      </div>
    </div>
  </div>
</form>
</div>


<a href="/">Reload Homepage</a>

  <% if @user && @user.errors.any? %>
  <div>
    <strong>There are some issues with your input, you'll have to fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |input| %>
        <li><%= input %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="login">
<form action="/login" method="post">
  <input type="submit" value="login">
</form>
</div>