<%if get_current_user.nil? %>
<form action="/" method="post">
    <div class="form">
      <div>
        <label>Username:</label>
        <input type="text" name="username" value="<%= @user && @user.username %>"required >
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password" value="<%= @user && @user.password %>"required >
      </div>
       <div>
        <label>Avatar URL:</label>
        <input type="url" name="img" value="<%= @user && @user.img %>" required >
      </div>
      <div>

        <label>Age:</label>
        <input type="text" name="age" value="<%= @user && @user.age %>" required>

      </div>
       <div>
       <label></label><br>
          <input type="radio" name="gender" value="male">Male<br>
          <input type="radio" name="gender" value="female">Female
      </div>
      <div>

        <label>Bio:</label>
        <input type="text" name="bio" value="<%= @user && @user.bio %>">

      </div>
      <br>
      <div>

      <input type="submit" value="Sign Me Up!">
      </div>
    </div>
  </div>
  </div>
</form>

