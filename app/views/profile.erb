<% if get_current_user %>
  <h2> Welcome <%= @current_user.username %> <%= @current_user.id %></h2>
<%else%> 
<h2><a href="/signup">please sign in</h2>
<%end%>

<a href="/">Home</a>
<%if get_current_user %>
<form action="/logout" method="post">
  <input type="submit" value="logout">
</form>
<% end %>

<img src= "<%= @current_user.img %>" max-width=25% >
<%= @current_user.bio %>

<h2> Date preferences</h2>

<form action="/profile" method="post">
  <div class="form">
      <div>
        <h3>Choose your gender preference:</h3>
        <select name="gender_pref">
        <option value="male">Male</option>
        <option value="female">Female</option>
        </select>
      </div>
      <div>
        <h3>Choose your age range:</h3>
        <select name="age_range">
        <option value="18-25">18-25</option>
        <option value="26-35">25-35</option>
        <option value="36-45">25-45</option>
        <option value="45+">45+</option>
        </select>
      </div>
      <div>
        <h3>Choose your date type:</h3>
        <select name="date_type">
        <option value="coffee">Coffee</option>
        <option value="outdoor_activity">Outdoor Activity</option>
        <option value="restaurant">Restaurant</option>
        <option value="drinks">Drinks</option>
        </select>
      </div>
    </div>
    <input type="submit" value="Save Preferences">
</form>

<%if get_current_user %>
<form action="/activity" method="post">
  <input type="submit" value="Find me a match!">
</form>
<% end %>